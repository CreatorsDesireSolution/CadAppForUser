<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        tools:context=".HomePageActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:elevation="2dp"></androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="20dp"
            android:background="#FFF"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:queryHint="Search By Shop Or Home"
                    android:iconifiedByDefault="false"
                    android:id="@+id/searchview"
                    />





            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/card"
            android:id="@+id/mylist"
            android:layout_marginTop="10dp"/>




        <TextView
            android:id="@+id/cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mylist"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15sp"
            android:text="Categories"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal"></TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cat"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/woman"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shop1"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cat"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/cat"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/man"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home1"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop" android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout"
            android:orientation="horizontal"
            android:layout_below="@+id/card1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:scaleType="centerCrop"
                android:text="Shop"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/quantum_orange"
                android:id="@+id/shop"
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:scaleType="centerCrop"
                android:text="Home"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"
                android:textColor="@color/quantum_orange"
                android:id="@+id/home"
                android:textSize="20dp"
                />



        </LinearLayout>






        <TextView
            android:id="@+id/feat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Featured"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/seeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:text="See all"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="normal"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/seeAll"
            android:layout_marginTop="22dp"></androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/frella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycleView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Freelancers"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="normal"></TextView>

        <TextView
            android:id="@+id/seeAllFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycleView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:text="See all"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="normal"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView1"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/seeAllFree"
            android:layout_marginTop="22dp"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</ScrollView>