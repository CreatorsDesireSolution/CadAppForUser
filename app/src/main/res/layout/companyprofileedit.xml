<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act_CustomerProfileEdit"
    android:background="@color/white">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lay_frm1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <FrameLayout
            android:id="@+id/lay_prof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="horizontal"
                        >


                        <LinearLayout
                            android:id="@+id/lays"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/circle_profileupload"
                            android:backgroundTint="@color/quantum_orange">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_profile_image"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="10dp"
                                android:backgroundTint="@color/quantum_orange"
                                android:src="@drawable/profileimage" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_toRightOf="@id/lays"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">





                            <TextView
                                android:id="@+id/companyname"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/lays"
                                android:text="COMPANY"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16sp" />


                            <RatingBar
                                android:id="@+id/ratingbar"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_below="@+id/name"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@+id/lays"
                                android:background="@color/white"
                                android:backgroundTint="@color/white"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="5"
                                android:scaleX=".3"
                                android:scaleY=".3"
                                android:text="Haircut"
                                android:textStyle="normal"
                                android:transformPivotX="0dp"
                                android:transformPivotY="0dp"></RatingBar>

                            <LinearLayout
                                android:id="@+id/lay_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ratingbar"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                >

                                <ImageView
                                    android:id="@+id/iv_email"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="-5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_email_black_24dp"

                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:drawablePadding="10dp"
                                    android:text="Prachiprajapat861@gmail.com"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lay_mob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lay_email"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/mob"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="-5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_phone_iphone_black_24dp"

                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/mobile_nummber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:drawablePadding="10dp"
                                    android:text="0003366677"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />




                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/lay_loc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lay_mob"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                >

                                <ImageView
                                    android:id="@+id/iv_location"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="-5dp"
                                    android:padding="3dp"
                                    android:src="@drawable/ic_location"

                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:drawablePadding="10dp"
                                    android:text="Dhamnod Dhar"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_state"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:textColor="@color/white"
                                    android:textSize="14dp" />
                            </LinearLayout>




                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/view"
                        android:background="@color/quantum_orange"
                        android:layout_below="@+id/relative"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/relative">

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/established"
                        android:layout_below="@id/view"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Since"/>




                    <RelativeLayout
                        android:id="@+id/laybackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/established"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/background11"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"

                            android:layout_gravity="center_vertical"
                            android:background="@drawable/editborder"
                            android:drawablePadding="10dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="About Company"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/editborder"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/laybackground"
                        android:id="@+id/tvbg"
                        android:visibility="gone"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BACKGROUND"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp"
                            android:textStyle="bold" />





                    </LinearLayout>






                    <RelativeLayout
                        android:id="@+id/lay_certificate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvbg"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_certificate"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_gravity="center_vertical"
                            android:background="@drawable/editborder"
                            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                            android:drawablePadding="10dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="CERTIFICATION"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp"
                            android:textStyle="bold" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/workperform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_certificate"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/workperform1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_gravity="center_vertical"
                            android:background="@drawable/editborder"
                            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                            android:drawablePadding="10dp"

                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="WORK PERFORM"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/noofstaff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/workperform"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/no_of_staff"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_gravity="center_vertical"
                            android:background="@drawable/editborder"
                            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                            android:drawablePadding="10dp"

                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="NO OF STAFF"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </RelativeLayout>




                    <FrameLayout
                        android:id="@+id/lay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noofstaff"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/editborder"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"

                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1">
                            <!--bg_home-->




                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp"
                                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                                android:paddingLeft="10dp"
                                android:text="Services List"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                tools:ignore="Suspicious0dp" />





                        </LinearLayout>


                    </FrameLayout>


                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/lay1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"

                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/background_final"
                        android:backgroundTint="@color/black"
                        android:text="next"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>


</ScrollView>