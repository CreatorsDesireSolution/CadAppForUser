<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act_FreelancerProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/profileimage"
                android:id="@+id/profileImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freelancer"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_below="@+id/profileImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_edit"
                android:drawableRight="@drawable/ic_pencil"/>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/quantum_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Name              :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/name"
                    android:text="Sagar  "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Lastname         :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/lastname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/lastname"
                    android:text="  Jain"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Gender            :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/Gender"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/black"
                   android:id="@+id/gender1"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/Gender"
                    android:textSize="16sp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Rating             :"
                    android:textSize="16sp" />


                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Haircut"
                    android:numStars="5"
                    android:id="@+id/ratingbar"
                    android:rating="5"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:isIndicator="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/freelancer"
                    android:textSize="16dp"
                    android:layout_toRightOf="@+id/Rating"
                    android:textStyle="normal"
                    ></RatingBar>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Location          :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/location"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Damoh"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/black"
                   android:id="@+id/Location1"
                    android:layout_toRightOf="@+id/location"
                    android:textSize="16sp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Mobile             :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/experience"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6260268380"
                    android:textColor="@color/black"
                    android:id="@+id/mobile1"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/experience"
                    android:textSize="16sp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Email                :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sagarjian@gmail.com"
                    android:textColor="@color/black"
                    android:id="@+id/email1"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/email"
                    android:textSize="16sp"/>

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="See Lis             :"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/certificate"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="See List"
                    android:id="@+id/btnSeeList"
                    android:background="@drawable/background2"
                    android:textColor="@color/black"
                   android:paddingLeft="5dp"
                    android:paddingRight="6dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/certificate"
                    android:textSize="16sp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Work Performed  :"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/workperformed"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="View WorkPerform"
                    android:background="@drawable/background2"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:paddingRight="6dp"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/workperformed"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Background     :"
                    android:textSize="16sp"
                    android:id="@+id/background"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="My Background"
                    android:paddingLeft="10dp"

                    android:id="@+id/background111"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/card_background"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                  android:layout_below="@+id/background"
                    android:textSize="16sp"/>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>