<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgrey1"
        android:orientation="vertical"
        tools:context=".Activities.Act_add_experience">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/lay_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightgrey1"
                    android:orientation="vertical"
                    tools:context=".Activities.Act_add_experience">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:orientation="vertical">




                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=".50"
                            android:drawableRight="@drawable/ic_account_circle_black_24dp"
                            android:background="@drawable/background_border15"
                            android:inputType="textCapWords"
                            android:paddingLeft="10dp"
                            android:hint="Name"
                            android:paddingTop="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="12dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="normal"
                            tools:ignore="Suspicious0dp" />


                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=".50"
                            android:drawableRight="@drawable/ic_email_black_24dp"
                            android:background="@drawable/background_border15"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="12dp"
                            android:hint="Email Address"
                            android:paddingTop="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="12dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="normal"
                            tools:ignore="Suspicious0dp" />



                        <EditText
                            android:id="@+id/et_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=".50"
                            android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
                            android:background="@drawable/background_border15"
                            android:inputType="number"
                            android:hint="Mobile"
                            android:paddingLeft="10dp"
                            android:paddingTop="12dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="12dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="normal"
                            tools:ignore="Suspicious0dp" />


                        <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:paddingLeft="20dp"-->
                        <!--android:text="Time period"-->
                        <!--android:textColor="@color/colorPrimaryDark"-->
                        <!--android:textSize="15dp" />-->

                        <!--<CheckBox-->
                        <!--android:id="@+id/checkbox"-->
                        <!--android:layout_marginLeft="@dimen/dimen_20"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:text="I currently work here"-->
                        <!--app:buttonTint="@color/DarkRed"-->
                        <!--android:layout_height="match_parent"-->
                        <!--/>-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/tv_dob"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/background_border15"
                                    android:drawableRight="@drawable/ic_event_available_black_24dp"
                                    android:hint="Date Of Birth"

                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="12dp"
                                    android:textColor="@color/black"
                                    tools:ignore="Suspicious0dp" />


                            </LinearLayout>


                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="20dp"

                            android:text="Choose Gender(Male or Female)"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15dp" />




                        <RelativeLayout
                            android:id="@+id/l55"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:weightSum="1"

                            android:layout_marginTop="10dp"
                            >






                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_weight=".4"
                                android:id="@+id/lay_male"
                                android:orientation="vertical"
                                android:background="@drawable/background_border15"
                                android:backgroundTint="@color/white">

                                <LinearLayout
                                    android:id="@+id/lay1"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/circle_profileupload"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center"
                                    >

                                    <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:padding="5dp"
                                        android:src="@drawable/men_image" />






                                </LinearLayout>




                                <!--<View-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:background="@color/card_bg_dark"-->
                                <!--android:layout_height="2dp"/>-->


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Male"

                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"/>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="120dp"
                                android:layout_weight=".4"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:background="@drawable/background_border15"
                                android:backgroundTint="@color/white">

                                <LinearLayout
                                    android:id="@+id/lay2"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/circle_profileupload"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center"
                                    >

                                    <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:padding="5dp"
                                        android:src="@drawable/woman_image" />






                                </LinearLayout>




                                <!--<View-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:background="@color/card_bg_dark"-->
                                <!--android:layout_height="2dp"/>-->


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Female"

                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"/>

                            </LinearLayout>






                        </RelativeLayout>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:background="@drawable/background_border15"
                                android:backgroundTint="@color/white">


                                <EditText
                                    android:id="@+id/et_pan"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight=".50"
                                    android:hint="Pan Card No."
                                    android:inputType="number"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="12dp"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="13dp"
                                    android:textStyle="normal"
                                    tools:ignore="Suspicious0dp" />


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:background="@drawable/background_border15"
                                android:backgroundTint="@color/white">

                                <EditText
                                    android:id="@+id/et_aadhar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:hint="Aadhar No."
                                    android:inputType="number"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="12dp"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="13dp"
                                    android:textStyle="normal"
                                    tools:ignore="Suspicious0dp" />


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:background="@drawable/background_border15"
                                android:backgroundTint="@color/white">


                                <EditText
                                    android:id="@+id/et_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight=".50"
                                    android:inputType="textCapWords"
                                    android:paddingLeft="10dp"
                                    android:hint="City"
                                    android:paddingTop="12dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="12dp"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="13dp"
                                    android:textStyle="normal"
                                    tools:ignore="Suspicious0dp" />




                                <Button
                                    android:id="@+id/btn_save"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_below="@id/lay_ediittext"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_marginBottom="30dp"
                                    android:background="@drawable/btnback"
                                    android:backgroundTint="@color/quantum_orange"
                                    android:fontFamily="sans-serif-medium"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:text="SAVE"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp"
                                    android:visibility="gone" />

                            </LinearLayout>





                        </LinearLayout>












                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:background="#c1bfbf"></View>-->


                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>