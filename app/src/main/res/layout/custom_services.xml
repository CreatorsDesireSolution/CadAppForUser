<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:background="@color/black"
            android:id="@+id/relative">
            <ImageView
                android:layout_width="270dp"
                android:layout_height="130dp"

                android:src="@drawable/womanfacial"
                android:id="@+id/servicesImage"
                android:scaleType="centerCrop">
            </ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/servicesImage"
                android:paddingLeft="15dp"
                android:layout_marginTop="7dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haircut"
                    android:id="@+id/textServiceName"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum"
                    android:textColor="#FFF"
                    android:id="@+id/txtLorem"
                    android:textSize="13sp"

                    android:layout_below="@id/textServiceName"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
                android:id="@+id/checkSign"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"></ImageView>

            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/vi1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/card"
        android:background="#D7D7D7"></View>
</RelativeLayout>