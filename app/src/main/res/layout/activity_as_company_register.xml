<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAsFreelancerActivity">


    <TextView
        android:id="@+id/txtReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER AS COMPANY"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245"
       android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="0dp" >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:background="@drawable/card_background"
           android:layout_height="wrap_content">

           <FrameLayout
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:id="@+id/frame1"
               android:layout_centerHorizontal="true">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/userImageIcon"
                   android:src="@drawable/ic_account_circle_black_24dp"></de.hdodenhof.circleimageview.CircleImageView>

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/iv_camera"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:padding="10dp"
                   android:background="@drawable/circle_profileupload"
                   android:src="@drawable/ic_photo_camera_black_24dp"
                   android:layout_gravity="bottom|right"

                   />
           </FrameLayout>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Company name"
               android:paddingLeft="13dp"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:inputType="text"

               android:id="@+id/etCompanyName"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/frame1"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></EditText>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Registration Number"
               android:paddingLeft="13dp"
               android:textColorHint="#68000000"
               android:inputType="phone"
               android:textSize="15sp"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:id="@+id/etRegistrationNumber"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etCompanyName"

               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></EditText>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Address"
               android:paddingTop="10dp"
               android:textSize="15sp"
               android:inputType="date"
               android:textColorHint="#68000000"
               android:paddingLeft="13dp"
               android:id="@+id/etAddress"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etRegistrationNumber"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></TextView>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Mobile Number"
               android:textColorHint="#68000000"
               android:textSize="15sp"
               android:inputType="text"
               android:paddingLeft="13dp"
               android:id="@+id/etMobileNumber"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etAddress"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></EditText>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Email"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:inputType="text"
               android:paddingLeft="13dp"
               android:id="@+id/etEmail"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etMobileNumber"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></EditText>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="No.staff"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:inputType="text"
               android:paddingLeft="13dp"
               android:id="@+id/et_staff"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etEmail"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></EditText>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Password"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:inputType="textPassword"
               android:paddingLeft="13dp"
               android:id="@+id/etPassword"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/et_staff"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></EditText>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:hint="About Company"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:id="@+id/etAboutCompany"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etPassword"
               android:paddingLeft="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/aboutback"
               android:textStyle="normal"
               ></EditText>

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="SignUp"
               android:textStyle="normal"
               android:textColorHint="#FFF"
               android:textSize="15dp"
               android:id="@+id/btnSignedIncomapny"
               android:ems="8"
               android:textColor="#FFF"
               android:layout_marginTop="20sp"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:background="@drawable/signinbtn_back"
               android:layout_below="@+id/etAboutCompany"
               android:layout_marginBottom="15dp"></Button>

<!--           <TextView-->
<!--               android:layout_width="wrap_content"-->
<!--               android:layout_height="wrap_content"-->
<!--               android:layout_below="@+id/btnSignedIn"-->
<!--               android:layout_centerHorizontal="true"-->
<!--               android:layout_marginBottom="10dp"-->
<!--               android:text="You are already a member?"></TextView>-->

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>