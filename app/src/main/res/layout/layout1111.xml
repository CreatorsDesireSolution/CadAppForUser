<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/cardV"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:scaleType="center"
                android:id="@+id/facialImageFreelancer"
                android:layout_height="160dp"
                android:src="@drawable/womanfacial"></ImageView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freelancer"
        android:id="@+id/freelancer"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/cardV"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        ></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freelancer"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/starorange"
            android:id="@+id/ratingbar"/>

        <TextView
            android:id="@+id/userrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="4.5"
            android:layout_toRightOf="@id/ratingbar"
            android:textColor="#000"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/kilometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="4.5"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@id/userrating"
            android:layout_toRightOf="@id/ratingbar"
            android:textColor="#000"
            android:textSize="12sp" />



    </RelativeLayout>


</RelativeLayout>