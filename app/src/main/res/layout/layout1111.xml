<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/cardV"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:scaleType="center"
                android:id="@+id/facialImageFreelancer"
                android:layout_height="160dp"
                android:src="@drawable/womanfacial"></ImageView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freelancer"
        android:id="@+id/freelancer"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/cardV"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freelancer"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haircut"
            android:numStars="5"
            android:src="@drawable/starorange"
            android:id="@+id/ratingbar"
            android:rating="5"
            android:scaleX="0.6"
            android:scaleY="0.6"

            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/freelancer"
            android:textStyle="normal"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:fontFamily="@font/poppins_light"
            android:id="@+id/userrating"
            android:textSize="16sp"
            android:textColor="@color/black">

        </TextView>


    </LinearLayout>


</RelativeLayout>