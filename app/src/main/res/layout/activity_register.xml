<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/txtReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245"
       android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="0dp" >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:background="@drawable/card_background"
           android:layout_height="wrap_content">

           <FrameLayout
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:id="@+id/frame1"
               android:layout_centerHorizontal="true">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/userImageIcon"
                   android:src="@drawable/ic_account_circle_black_24dp"></de.hdodenhof.circleimageview.CircleImageView>

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/iv_camera"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:padding="10dp"
                   android:background="@drawable/circle_profileupload"
                   android:src="@drawable/ic_photo_camera_black_24dp"
                   android:layout_gravity="bottom|right"

                   />
           </FrameLayout>

           <EditText
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:hint="First name"
               android:inputType="text"
               android:ems="5"
               android:textSize="15sp"
               android:paddingLeft="13dp"
               android:id="@+id/etFirstName"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/frame1"
               android:layout_marginLeft="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></EditText>

           <EditText
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:hint="Last name"
               android:textSize="15sp"
               android:inputType="text"
               android:paddingLeft="13dp"
               android:textColorHint="#68000000"
               android:id="@+id/etLatName"
             android:layout_alignParentRight="true"
               android:layout_marginTop="8dp"
               android:layout_marginRight="13dp"
               android:layout_below="@+id/frame1"

               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></EditText>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Email"
               android:paddingLeft="13dp"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:inputType="textEmailAddress"

               android:id="@+id/etUserEmail"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etFirstName"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></EditText>



           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Date of Birth"
               android:paddingLeft="13dp"
               android:textSize="15sp"
               android:textColorHint="#68000000"
               android:inputType="textEmailAddress"
               android:paddingTop="10dp"
               android:id="@+id/txt_DOB"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etUserEmail"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               />


           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Phone Number"
               android:paddingLeft="13dp"
               android:textColorHint="#68000000"
               android:inputType="phone"
               android:textSize="15sp"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:id="@+id/etUsePhoneNumber"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/txt_DOB"

               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></EditText>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Date Of Birth"
               android:textSize="15sp"
               android:inputType="date"
               android:paddingTop="10dp"
               android:textColorHint="#68000000"
               android:paddingLeft="13dp"
               android:id="@+id/etDateOfBirth"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etUsePhoneNumber"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/edit_text_back"
               android:textStyle="normal"
               ></TextView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Gender"
               android:textColorHint="#68000000"
               android:textSize="15sp"
               android:inputType="text"
               android:paddingLeft="13dp"
               android:paddingTop="10dp"
               android:id="@+id/etGender"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etUsePhoneNumber"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></TextView>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Address"
               android:textSize="15sp"
               android:ems="5"
               android:lines="5"
               android:paddingTop="10dp"
               android:textColorHint="#68000000"
               android:inputType="text"
               android:paddingLeft="13dp"
                android:paddingRight="10dp"
               android:id="@+id/etAddress"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etGender"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></TextView>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Referral Code"
               android:textSize="15sp"
               android:inputType="text"
               android:textColorHint="#68000000"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:id="@+id/etReferralCode"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etAddress"
               android:paddingLeft="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></EditText>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:hint="Referral Code"
               android:textSize="15sp"
               android:inputType="text"
               android:textColorHint="#68000000"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:id="@+id/etpassword"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/etAddress"
               android:paddingLeft="13dp"
               android:textColor="#8B000000"
               android:layout_marginBottom="5dp"
               android:background="@drawable/editborder"
               android:textStyle="normal"
               ></EditText>



           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Sign Up"
               android:textStyle="normal"
               android:textColorHint="#FFF"
               android:textSize="15dp"
               android:id="@+id/btnSignedIn"
               android:textColor="#FFF"
               android:layout_marginTop="25sp"
               android:layout_marginLeft="13dp"
               android:layout_marginRight="13dp"
               android:background="@drawable/signinbtn_back"

               android:layout_below="@+id/etReferralCode"
               android:layout_marginBottom="15dp"></Button>

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>