<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/cardV"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="15"
        android:shadowRadius="50"
        android:elevation="8dp"
        android:divider="@color/quantum_orange"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"

            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:scaleType="center"
                android:id="@+id/staffimage"
                android:layout_marginTop="10dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/womanfacial"></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:id="@+id/firstname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_light"
                android:layout_toRightOf="@+id/staffimage"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/quantum_orange"
                ></TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:id="@+id/lastname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/firstname"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_light"
                android:textStyle="bold"
                android:textColor="@color/quantum_orange"
                ></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/staffimage"
                android:layout_below="@+id/lastname"
                android:layout_marginLeft="10dp"
                android:id="@+id/staffemail"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/staffemail"
                android:layout_toRightOf="@+id/staffimage"
                android:fontFamily="@font/poppins_light"
                android:id="@+id/staffnumber"
                android:textSize="16sp"
                android:textColor="@color/black">

            </TextView>



        </RelativeLayout>




    </androidx.cardview.widget.CardView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_below="@id/cardV">




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:orientation="vertical">




    </LinearLayout>


</RelativeLayout>