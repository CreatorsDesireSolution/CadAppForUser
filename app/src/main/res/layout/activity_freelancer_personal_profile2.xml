<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreelancerPersonalProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pencil"
        android:id="@+id/editProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25sp"></ImageView>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/userProfile"
        android:layout_below="@+id/editProfile"
        android:layout_marginTop="10sp"
       android:layout_marginLeft="20sp"
        android:src="@drawable/ic_account_circle_black_24dp"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sagar@gmial.com"
        android:textSize="15sp"
        android:textColor="#000"
        android:id="@+id/userEmail"
        android:layout_below="@+id/editProfile"
        android:layout_marginLeft="15sp"
        android:layout_toRightOf="@id/userProfile"
        android:layout_marginTop="50sp"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_toRightOf="@id/userProfile"
        android:id="@+id/star"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="12sp"
        android:layout_below="@+id/userEmail"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmail"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:id="@+id/userRating"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/star"
        android:text="4.5"
        ></TextView>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userProfile"
        android:enabled="false"
        android:id="@+id/userFirstName"
        android:hint="First Name"
        android:textColorHint="#000"
        >
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:id="@+id/userLastName"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userFirstName"
        android:enabled="false"
        android:hint="Last Name"
        android:textColorHint="#000"
        ></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/userMobileNo"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userLastName"
        android:enabled="false"
        android:hint="Mobile No."
        android:textColorHint="#000"
        ></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/userLocation"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userMobileNo"
        android:enabled="false"
        android:hint="Location"
        android:maxLength="50"
        android:textColorHint="#000"
        ></com.google.android.material.textfield.TextInputEditText>


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/userGender"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userLocation"
        android:enabled="false"
        android:hint="Gender"
        android:textColorHint="#000"
        ></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:id="@+id/userBackground"
        android:background="@drawable/card_background"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userGender"
        android:enabled="false"
        android:paddingLeft="10dp"
        android:hint="Background"
        android:textColorHint="#000"
        ></com.google.android.material.textfield.TextInputEditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/userBackground"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:id="@+id/btnSumbit"
        android:textColorHint="#FFF"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btnback"
        android:hint="Submit"></Button>

</RelativeLayout>
</ScrollView>