<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act_ContactUs"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editborder"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:text="creatorsdesires@gmail.com"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editborder"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
            android:text="CONTACT US"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editborder"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:text="FEEDBACK"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editborder"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
            android:text="+910003337777"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editborder"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_location"
            android:text="Indore M.P"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            />



    </LinearLayout>

</LinearLayout>