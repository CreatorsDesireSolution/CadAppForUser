<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesProvide">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEPTED LOCATION WHERE I OFFER MY SERVICES"
        android:textSize="22dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/txtAcc"></TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkKm"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtAcc"
     ></CheckBox>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number of Km i will provide service like 2/4/8/10/15"
        android:textColorHint="@color/black"
        android:layout_below="@+id/txtAcc"

        android:textSize="12sp"
        android:layout_toRightOf="@+id/checkKm"
        android:id="@+id/txtKm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/black"
        ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="10Km"
        android:textSize="15sp"
android:visibility="gone"
        android:paddingLeft="13dp"
        android:textColorHint="#68000000"
        android:id="@+id/etKm"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/txtKm"
        android:textColor="#8B000000"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/profileimageback"
        android:textStyle="normal"
        ></EditText>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkAtMyPlace"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/etKm"
        ></CheckBox>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="At My Place"
        android:textColorHint="@color/black"
        android:layout_below="@+id/etKm"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/checkAtMyPlace"
        android:id="@+id/txtAtMyPlace"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/black"
        ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="401, karol bagh"
        android:textSize="15sp"
        android:visibility="gone"
        android:paddingLeft="13dp"
        android:textColorHint="#68000000"
        android:id="@+id/etMyPlace"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/txtAtMyPlace"
        android:textColor="#8B000000"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/profileimageback"
        android:textStyle="normal"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVALIBILITY"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:id="@+id/txtAv"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/etMyPlace"
        ></TextView>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkAlways"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/txtAv"></CheckBox>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Always"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/txtAlways"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/checkAlways"
        android:layout_below="@+id/txtAv"></TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkSetAvalibilty"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/txtSetAvalibilty"
        android:layout_below="@+id/txtAv"></CheckBox>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSetAvalibilty"
        android:text="Set availabilty"
        android:textColor="@color/colorAccent"
        android:textStyle="normal"
        android:layout_marginTop="13dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtAv"
        android:layout_marginRight="20dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCELLATION POLICY"
        android:textSize="22dp"
        android:id="@+id/txtCancel"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/txtSetAvalibilty"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:id="@+id/txtCancelText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txtCancel"
        android:text="Flexible means that customers receive full refund in case of cancellation no later than 2 hours before booked time. Moderate means that customers get full refund if canceled no later than 1 day before booked time. Strictly means that customer get full refund if canceled no later than 2 days before booked time."></TextView>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkFlexible"

        android:layout_marginTop="20sp"
        android:layout_below="@+id/txtCancelText"
        ></CheckBox>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flexible"
        android:layout_marginTop="24dp"
        android:id="@+id/txtFlexible"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/checkFlexible"
        android:layout_below="@+id/txtCancelText"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/colorAccent"></TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkStrict"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/txtFlexible"
        android:layout_below="@+id/txtCancelText"
        android:layout_marginTop="20dp"></CheckBox>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Strict"
        android:id="@+id/txtStrict"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/checkStrict"
        android:layout_below="@+id/txtCancelText"
        android:layout_marginTop="24dp"></TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkModerate"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/txtModerate"
        android:layout_below="@+id/txtCancelText"></CheckBox>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtModerate"
        android:layout_marginLeft="4dp"
        android:text="Moderate"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal"
        android:layout_marginTop="23dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtCancelText"
        ></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnNext"
        android:layout_below="@+id/txtModerate"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/btnback"
        android:text="Next"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="18sp"></Button>

</RelativeLayout>
</ScrollView>