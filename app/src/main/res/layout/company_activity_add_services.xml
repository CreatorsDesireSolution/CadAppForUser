<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".FreelancerAddServicesActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/serviceImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_account_circle_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/etSName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/circle_profileupload"

        android:padding="10dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/etSName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/userImageIcon" />

    <EditText
        android:id="@+id/etSName"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background2"
        android:hint="Service Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="13dp"
        android:textColor="#8B000000"
        android:textColorHint="#68000000"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"></EditText>

    <EditText
        android:id="@+id/et_servicedescription"
        android:layout_width="280dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background2"
        android:ems="5"
        android:hint="Description"
        android:inputType="textEmailAddress"
        android:lines="5"
        android:paddingLeft="13dp"
        android:textColor="#8B000000"
        android:textColorHint="#68000000"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSName"
        app:layout_constraintVertical_bias="0.023"></EditText>

    <EditText
        android:id="@+id/etSetPrice"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background2"
        android:hint="Set Price"
        android:inputType="textEmailAddress"
        android:paddingLeft="13dp"
        android:textColor="#8B000000"
        android:textColorHint="#68000000"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_servicedescription"
        app:layout_constraintVertical_bias="0.0"></EditText>

    <EditText
        android:id="@+id/et_duration"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background2"
        android:hint="duration in minutes"
        android:inputType="textEmailAddress"
        android:paddingLeft="13dp"
        android:textColor="#8B000000"
        android:textColorHint="#68000000"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSetPrice"
        app:layout_constraintVertical_bias="0.0"></EditText>

    <Button
        android:id="@+id/btn_add_service"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnback"
        android:text="Add Services"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_duration"
        app:layout_constraintVertical_bias="0.0"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>