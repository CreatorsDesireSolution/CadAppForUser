<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/splashlogo"
            android:id="@+id/logoIcon"
            android:layout_centerHorizontal="true"
            ></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/logoIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_background"
            >
            <EditText
                android:id="@+id/etEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="15sp"
                android:layout_marginLeft="18dp"
                android:hint="Email"
                android:layout_marginRight="18dp"
                android:background="@drawable/edit_text_back">

            </EditText>

            <EditText
                android:id="@+id/etPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                android:hint="Password"
                android:paddingLeft="15sp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_back"
                android:layout_below="@+id/etEmailLayout"
                app:passwordToggleEnabled="true"
                >


            </EditText>

                         <CheckBox
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/check_box"
                             android:layout_marginLeft="20dp"
                             android:layout_below="@+id/etPasswordLayout"></CheckBox>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="5dp"
                         android:layout_marginLeft="5dp"
                         android:textSize="15sp"
                         android:textStyle="normal"
                         android:layout_below="@id/etPasswordLayout"
                         android:layout_toRightOf="@+id/check_box"
                         android:text="Keep me signed in"></TextView>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:text="Forgot Password"
       android:textStyle="normal"
       android:id="@+id/forget_password"
       android:layout_below="@+id/etPasswordLayout"
       android:layout_alignParentEnd="true"
       android:layout_marginRight="25dp"
       ></TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textStyle="normal"
                android:textSize="15dp"
                android:id="@+id/btnSignedIn"
                android:textColor="#FFF"
                android:layout_marginTop="25sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/signinbtn_back"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/forget_password"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSignedIn"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textStyle="normal"
                android:id="@+id/btnRegister"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/registerbtn_back"
                android:layout_below="@+id/btnSignedIn"></Button>



        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>